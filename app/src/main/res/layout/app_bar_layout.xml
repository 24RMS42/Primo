<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:animateLayoutChanges="true"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:src="@drawable/ic_chevron_left_black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/toolbar_logo_staging"
        android:padding="@dimen/logo_padding" />

    <TextView
        android:id="@+id/toolbar_login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:textColor="@drawable/txt_selector"
        android:text="@string/login"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_logout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:textColor="@drawable/txt_selector"
        android:text="@string/logout"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_ok"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:textColor="@drawable/txt_selector"
        android:text="@string/ok"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>
