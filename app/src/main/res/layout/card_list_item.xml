<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:id="@+id/credit_card">

    <TextView
        android:id="@+id/number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:textColor="@color/color_black"/>

    <ImageView
        android:id="@+id/card_type"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/number_txt"
        android:layout_centerVertical="true"
        android:background="@drawable/card_general"/>

    <com.primo.utils.views.SquareImageView
        android:id="@+id/delete_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/minus_img"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:background="@drawable/rounded_image_border"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/default_image"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_unchecked"/>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/card_type"
        android:layout_toStartOf="@id/default_image"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/color_black"/>

</RelativeLayout>
